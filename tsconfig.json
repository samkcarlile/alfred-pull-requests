{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": ["./src/lib/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
